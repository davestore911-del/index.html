    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const generateBtn = document.getElementById('generate-btn');
            const saveBtn = document.getElementById('save-btn');
            const saveMainBtn = document.getElementById('save-main-btn');
            const loader = document.getElementById('loader');
            const notification = document.getElementById('notification');
            
            generateBtn.addEventListener('click', function() {
                // Get input values
                const birthdate = document.getElementById('birthdate').value;
                const birthtime = document.getElementById('birthtime').value;
                const birthplace = document.getElementById('birthplace').value;
                const name = document.getElementById('name').value;
                
                // Validate inputs
                if (!birthdate || !birthtime || !birthplace || !name) {
                    showNotification('Please fill in all fields to generate your cosmic insights.', 'error');
                    return;
                }
                
                // Show loading animation
                loader.style.display = 'block';
                
                // Simulate processing time
                setTimeout(() => {
                    // Generate all mystical insights
                    generateLifePurpose(name, birthdate);
                    generateSoulNameNumerology(name, birthdate);
                    generateSoulmateInfo(birthdate);
                    generateBirthstonesLuck(birthdate);
                    generateHealingFrequencies(birthdate);
                    generateTarotReading(birthdate);
                    generateSoulSigilInvocation(name, birthdate);
                    generateChanneledMessages(birthdate);
                    generateImportantDates(birthdate);
                    
                    // Hide loader and show notification
                    loader.style.display = 'none';
                    showNotification('Your cosmic insights have been generated successfully!');
                }, 1500);
            });
            
            // Show notification function
            function showNotification(message, type = 'success') {
                notification.textContent = message;
                notification.style.background = type === 'success' ? 'var(--green-healing)' : 'var(--red-passion)';
                notification.classList.add('show');
                
                setTimeout(() => {
                    notification.classList.remove('show');
                }, 3000);
            }
            
            // PDF generation function
            function generatePDF() {
                const birthdate = document.getElementById('birthdate').value;
                const name = document.getElementById('name').value;
                
                if (!birthdate || !name) {
                    showNotification('Please generate your insights first before saving as PDF.', 'error');
                    return;
                }
                
                // Create a custom filename with the user's name and date
                const fileName = `Cosmic_Alignment_${name.replace(/\s+/g, '_')}_${birthdate}.pdf`;
                
                // Get the element to print
                const element = document.querySelector('.results-section');
                
                // Configuration for html2pdf
                const opt = {
                    margin: 10,
                    filename: fileName,
                    image: { type: 'jpeg', quality: 0.98 },
                    html2canvas: { scale: 2 },
                    jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' }
                };
                
                // Generate and download PDF
                html2pdf().set(opt).from(element).save();
                
                showNotification('Your PDF is being prepared for download...');
            }
            
            // Add event listeners to save buttons
            saveBtn.addEventListener('click', generatePDF);
            saveMainBtn.addEventListener('click', generatePDF);
            
            function generateLifePurpose(name, date) {
                const purposes = [
                    'Healer and light-bringer to those in emotional pain',
                    'Teacher of spiritual wisdom through creative expression',
                    'Bridge between ancient wisdom and modern technology',
                    'Catalyst for transformation in social structures',
                    'Guardian of earth energies and natural harmony'
                ];
                
                const missions = [
                    'Your soul mission is极地 to help others find their spiritual path through your innovative ideas.',
                    'You are here to create systems that bring more beauty and harmony into the world.',
                    'Your purpose involves healing ancestral patterns and breaking cycles of limitation.',
                    'You are a wayshower for the new earth consciousness, demonstrating balanced living.',
                    'Your mission is to bring people together through art, music or community building.'
                ];
                
                const purpose = purposes[Math.floor(Math.random() * purposes.length)];
                const mission = missions[Math.floor(Math.random() * missions.length)];
                
                const content = `
                    <h4>Your Soul's Purpose</h4>
                    <p>${purpose}</p>
                    
                    <h4>Life Mission</h4>
                    <极地p>${mission}</p>
                    
                    <h4>Primary Expression</h4>
                    <p>You fulfill your purpose through ${['healing work', 'creative expression', 'teaching', 'leadership', 'innovation'][Math.floor(Math.random() * 5)]}.</p>
                    
                    <div class="energy-bar" style="width: ${70 + Math.random() * 30}%"></div>
                    <p class="highlight">Your current alignment with purpose: ${Math.floor(70 + Math.random() * 30)}%</p>
                    
                    <h4>How to Fulfill Your Purpose</h4>
                    <ul class="insight-list">
                        <li>Practice daily meditation to connect with your inner guidance</li>
                        <li>Develop your natural talents in ${['healing arts', 'creative expression', 'teaching', 'leadership', 'innovation'][Math.floor(Math.random() * 5)]}</li>
                        <li>Seek out communities that align with your values</li>
                        <li>Trust the synchronicities that guide your path极地</li>
                    </ul>
                `;
                
                document.querySelectorAll('.result-card')[0].querySelector('.card-content').innerHTML = content;
            }
            
            function generateSoulNameNumerology(name, date) {
                const soulNames = ['Aurora', 'Lumina', 'Solstice', 'Zenith', 'Nova', 'Celestia', 'Seraphina', 'Astralis'];
                const soulName = soulNames[Math.floor(Math.random() * soulNames.length)];
                
                // Simple life path number calculation
                const cleanDate = date.replace(/-/g, '');
                let total = 0;
                
                for (let i = 0; i < cleanDate.length; i++) {
                    total += parseInt(cleanDate[i]);
                }
                
                while (total > 9 && total !== 11 && total !== 22 && total !== 33) {
                    total = Math.floor(total / 10) + (total % 10);
                }
                
                const lifePath = total;
                
